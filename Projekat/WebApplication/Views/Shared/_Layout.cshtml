<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Trening RS", "PocetnaStrana", "Korisnik", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (Session["id"] == null || (Session["id"] != null && (string)Session["uloga"] == "POSETILAC") || (Session["id"] != null && (string)Session["uloga"] == "TRENER"))
                    {
                        <li>@Html.ActionLink("Fitnes Centri", "FitnesCentarTabela", "FitnesCentar")</li>
                    }
                    @if (Session["id"] != null && (string)Session["uloga"] == "VLASNIK")
                    {
                        <li>@Html.ActionLink("Fitnes Centri", "FitnesCentarVlasnik", "FitnesCentar")</li>
                    }
                    @if (Session["id"] == null)
                    {
                        <li>@Html.ActionLink("Login", "Login", "Korisnik")</li>
                    }
                    @if (Session["id"] == null)
                    {
                        <li>@Html.ActionLink("Registracija", "Registracija", "Korisnik")</li>
                    }
                    @if (Session["id"] != null)
                    {
                        <li>@Html.ActionLink("Profil", "Profil", "Korisnik")</li>
                    }
                    @if (Session["id"] != null && (string)Session["uloga"] == "POSETILAC")
                    {
                        <li>@Html.ActionLink("Stari Grupni Treninzi", "StariGrupniTreninzi", "GrupniTrening")</li>
                    }
                    @if (Session["id"] != null && (string)Session["uloga"] == "TRENER")
                    {
                        <li>@Html.ActionLink("Grupni Trenizi - Trener", "TrenerGrupniTreninzi", "GrupniTrening")</li>
                    }
                    @if (Session["id"] != null && (string)Session["uloga"] == "VLASNIK")
                    {
                        <li>@Html.ActionLink("Kreiraj Trenera", "KreirajTrenera", "Korisnik")</li>
                    }
                    @if (Session["id"] != null && (string)Session["uloga"] == "VLASNIK")
                    {
                        <li>@Html.ActionLink("Treneri", "TreneriTabela", "Korisnik")</li>
                    }
                    @if (Session["id"] != null && (string)Session["uloga"] == "VLASNIK")
                    {
                        <li>@Html.ActionLink("Komentari", "KomentariTabela", "Komentar")</li>
                    }
                    @if (Session["id"] != null)
                    {
                        <li>@Html.ActionLink("Logout", "Logout", "Korisnik")</li>
                    }

                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Trening RS</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
