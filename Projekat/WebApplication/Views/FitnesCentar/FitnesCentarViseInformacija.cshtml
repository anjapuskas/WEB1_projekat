@model WebApplication.Models.FitnesCentarGrupniTreninziKomentari

@{
    ViewBag.Title = "FitnesCentarViseInformacija";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<body>
    <h2 style="color:#fc6519;">Vise informacija o fitnes centru</h2>
    
    <form>
        <table>
            <tr>
                <td><label>Naziv fitnes centra: </label></td>
                <td><label>@Model.FitnesCentar.Naziv</label></td>
            </tr>
            <tr>
                <td><label>Adresa fitnes centra: </label></td>
                <td><label>@Model.FitnesCentar.Adresa</label></td>
            </tr>
            <tr>
                <td><label>Godina otvaranja fitnes centra: </label></td>
                <td><label>@Model.FitnesCentar.Godina</label></td>
            </tr>
            <tr>
                <td><label>Vlasnik fitnes centra: </label></td>
                <td><label>@Model.FitnesCentar.VlasnikImePrezime</label></td>
            </tr>
            <tr>
                <td><label>Cena mesecne clanarine: </label></td>
                <td><label>@Model.FitnesCentar.CenaMesecne</label></td>
            </tr>
            <tr>
                <td><label>Cena godisnje clanarine: </label></td>
                <td><label>@Model.FitnesCentar.CenaGodisnje</label></td>
            </tr>
            <tr>
                <td><label>Cena jednog treninga: </label></td>
                <td><label>@Model.FitnesCentar.CenaJednog</label></td>
            </tr>
            <tr>
                <td><label>Cena grupnog treninga: </label></td>
                <td><label>@Model.FitnesCentar.CenaGrupnog</label></td>
            </tr>
            <tr>
                <td><label>Cena personalnog treninga: </label></td>
                <td><label>@Model.FitnesCentar.CenaPersonalnog</label></td>
            </tr>
        </table>
    </form>

