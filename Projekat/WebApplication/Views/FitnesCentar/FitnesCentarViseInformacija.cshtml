    <br />

    <table class="table">
        <tr>
            <th>Naziv</th>
            <th>Tip Treninga</th>
            <th>Trajanje Treninga</th>
            <th>Datum i Vreme Treninga</th>
            <th>Maksimalan Broj Posetilaca</th>
            <th>Broj Prijavljenih Posetilaca</th>
            <th></th>
        </tr>
        @foreach (var gt in @Model.GrupniTreninzi)
        {

            <tr>
                <td>@gt.Naziv</td>
                <td>@gt.Tip</td>
                <td>@gt.TrajanjeTreninga</td>
                <td>@gt.DatumTreninga</td>
                <td>@gt.MaximalanBroj</td>
                <td>@gt.Posetioci.Count</td>
            </tr>
        }
    </table>
    <br />

    <table class="table">
        <tr>
            <th>Tekst</th>
            <th>Ocena</th>
            <th></th>
        </tr>
        @foreach (var k in @Model.Komentari)
        {

            <tr>
                <td>@k.Tekst</td>
                <td>@k.Ocena</td>
            </tr>
        }
    </table>

</body>
</html>


